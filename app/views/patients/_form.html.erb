<% if @patient.errors.any? %>
    <h2>Following errors are prevented patient from being saved</h2>
    <ul>
        <% @patient.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <%end%>
    </ul>
<% end %>


<%= form_with(model: @patient, local: true) do |form|%>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :address %>
        <%= form.text_field :address %>
    </div>

    <div class="field">
        <%= form.label :contact_number %>
        <%= form.text_field :contact_number %>
    </div>

    <div class="field">
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth, max: Date.today,  required: true %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>
