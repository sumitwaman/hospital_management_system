<h1>Appointment Details</h1>

<p>
  <strong>Patient:</strong>
  <%= @appointment.patient.name if @appointment.patient %>
</p>

<p>
  <strong>Doctor:</strong>
  <%= @appointment.doctor.name if @appointment.doctor %>
</p>

<p>
  <strong>Date:</strong>
  <%= @appointment.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @appointment.time %>
</p>

<%= link_to 'Edit', edit_patient_appointment_path(@appointment.patient, @appointment) %>
<%= link_to 'Back', patient_appointments_path(@appointment.patient) %> 
